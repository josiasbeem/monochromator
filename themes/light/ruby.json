{
    "colors": {
        "editor.wordHighlightStrongBackground": "#e01b2440"
    },
    "include": "./default.json",
    "name": "Monochromator Light Ruby",
    "tokenColors": [
        {
            "name": "Literals",
            "scope": [
                "constant.numeric",
                "constant.character",
                "string",
                "keyword.other.unit",
                "constant.other"
            ],
            "settings": {
                "fontStyle": "normal",
                "foreground": "#e01b24"
            }
        },
        {
            "name": "Bold literals",
            "scope": [
                "constant.language",
                "constant.character.escape",
                "constant.other.placeholder"
            ],
            "settings": {
                "fontStyle": "bold",
                "foreground": "#e01b24"
            }
        },
        {
            "scope": "markup.inline.raw",
            "settings": {
                "foreground": "#e01b24"
            }
        }
    ]
}
